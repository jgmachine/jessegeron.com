<div class="bg-slate-700 rounded-lg p-6 border border-slate-600">
  <h2 class="text-2xl font-bold text-white mb-6">Recent Games</h2>
  <div class="space-y-3">
    {recentPlays.map((play) => (
      <div class="bg-slate-800 rounded-lg p-4 border border-slate-600 hover:border-blue-500 transition">
        <div class="flex items-start justify-between gap-4">
          <div class="flex-1">
            <div class="flex items-center gap-2 mb-2">
              <h3 class="text-lg font-bold text-white">{play.gameName}</h3>
              {play.yourWin && (
                <span class="px-2 py-1 bg-green-900 text-green-200 text-xs font-bold rounded">
                  WIN
                </span>
              )}
              {!play.yourWin && (
                <span class="px-2 py-1 bg-red-900 text-red-200 text-xs font-bold rounded">
                  LOSS
                </span>
              )}
            </div>
            <p class="text-sm text-slate-400 mb-2">
              {new Date(play.date).toLocaleDateString("en-US", {
                weekday: "short",
                month: "short",
                day: "numeric",
                year: "numeric",
              })}
            </p>
            <div class="text-sm text-slate-300 space-y-1">
              <p>Your Score: <span class="font-bold text-blue-400">{play.yourScore}</span></p>
              <p>Players: <span class="text-slate-400">{play.playerCount}</span></p>
              {play.location && (
                <p>Location: <span class="text-slate-400">{play.location}</span></p>
              )}
            </div>
          </div>
          <div class="text-right">
            <div
              class={`w-12 h-12 rounded-full flex items-center justify-center font-bold text-lg ${
                play.yourWin
                  ? "bg-green-900 text-green-200"
                  : "bg-red-900 text-red-200"
              }`}
            >
              {play.yourScore}
            </div>
          </div>
        </div>
      </div>
    ))}
  </div>
</div>
