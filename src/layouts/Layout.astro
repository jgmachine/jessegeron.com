---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = "Jesse Geron's portfolio - K-12 Technology Leader, Developer, and AI Enthusiast" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Cloudflare Web Analytics -->
    <script defer src='https://static.cloudflareinsights.com/beacon.min.js' data-cf-beacon='{"token": "e3cb4cd653224ff198c0c0ba7aa6b8e9"}'></script>
    <!-- End Cloudflare Web Analytics -->
  </head>
  <body class="bg-white text-gray-900 min-h-screen">
    <div class="relative min-h-screen flex flex-col">
      <header class="bg-white/95 backdrop-blur-md border-b border-gray-200 sticky top-0 z-50 shadow-sm">
        <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div class="flex items-center justify-between h-20">
            <a href="/" class="text-2xl font-black text-gray-900 hover:text-blue-600 transition-colors">
              Jesse Geron
            </a>
            <!-- Desktop Navigation -->
            <div class="hidden md:flex gap-10 items-center">
              <a href="/blog" class="text-gray-700 hover:text-blue-600 transition-colors font-semibold">
                Blog
              </a>
              <a href="/reading" class="text-gray-700 hover:text-blue-600 transition-colors font-semibold">
                Reading
              </a>
              <div class="relative group">
                <button class="text-gray-700 hover:text-blue-600 transition-colors font-semibold">
                  Work
                  <span class="ml-1">▾</span>
                </button>
                <div class="absolute top-full left-0 mt-2 w-52 bg-white rounded-2xl shadow-xl border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all">
                  <a href="/ai-resources" class="block px-6 py-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-t-2xl transition font-medium">
                    AI Resources
                  </a>
                  <a href="/projects" class="block px-6 py-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition font-medium">
                    Projects
                  </a>
                  <a href="/work-docs" class="block px-6 py-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-b-2xl transition font-medium">
                    Work Docs
                  </a>
                </div>
              </div>
              <div class="relative group">
                <button class="text-gray-700 hover:text-blue-600 transition-colors font-semibold">
                  Play
                  <span class="ml-1">▾</span>
                </button>
                <div class="absolute top-full left-0 mt-2 w-52 bg-white rounded-2xl shadow-xl border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all">
                  <a href="/bggstats" class="block px-6 py-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-t-2xl transition font-medium">
                    BGG Stats
                  </a>
                  <a href="/bgastats" class="block px-6 py-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition font-medium">
                    BGA Stats
                  </a>
                  <a href="/board-games" class="block px-6 py-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 transition font-medium">
                    Tabletop Gaming
                  </a>
                  <a href="/biking" class="block px-6 py-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-b-2xl transition font-medium">
                    Mountain Biking
                  </a>
                </div>
              </div>
              <a href="/about" class="btn-primary hover-lift text-sm px-6 py-2.5">
                About
              </a>
            </div>

            <!-- Mobile Menu Button -->
            <button id="mobile-menu-btn" class="md:hidden p-2 text-gray-700 hover:text-blue-600 transition-colors" aria-label="Open menu">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </nav>
      </header>

      <!-- Mobile Menu Overlay -->
      <div id="mobile-menu-overlay" class="fixed inset-0 bg-black/50 z-50 hidden opacity-0 transition-opacity duration-300"></div>

      <!-- Mobile Menu Drawer -->
      <div id="mobile-menu" class="fixed top-0 right-0 h-full w-72 bg-white z-50 shadow-2xl translate-x-full transition-transform duration-300 ease-out">
        <div class="flex items-center justify-between p-6 border-b border-gray-200">
          <span class="text-xl font-bold text-gray-900">Menu</span>
          <button id="mobile-menu-close" class="p-2 text-gray-700 hover:text-blue-600 transition-colors" aria-label="Close menu">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        <nav class="p-6 space-y-2">
          <a href="/blog" class="block py-3 px-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-xl transition font-semibold">
            Blog
          </a>
          <a href="/reading" class="block py-3 px-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-xl transition font-semibold">
            Reading
          </a>

          <div class="pt-4 pb-2">
            <span class="px-4 text-xs font-bold text-gray-400 uppercase tracking-wider">Work</span>
          </div>
          <a href="/ai-resources" class="block py-3 px-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-xl transition font-medium">
            AI Resources
          </a>
          <a href="/projects" class="block py-3 px-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-xl transition font-medium">
            Projects
          </a>
          <a href="/work-docs" class="block py-3 px-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-xl transition font-medium">
            Work Docs
          </a>

          <div class="pt-4 pb-2">
            <span class="px-4 text-xs font-bold text-gray-400 uppercase tracking-wider">Play</span>
          </div>
          <a href="/bggstats" class="block py-3 px-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-xl transition font-medium">
            BGG Stats
          </a>
          <a href="/bgastats" class="block py-3 px-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-xl transition font-medium">
            BGA Stats
          </a>
          <a href="/board-games" class="block py-3 px-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-xl transition font-medium">
            Tabletop Gaming
          </a>
          <a href="/biking" class="block py-3 px-4 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-xl transition font-medium">
            Mountain Biking
          </a>

          <div class="pt-6">
            <a href="/about" class="block w-full text-center btn-primary py-3">
              About
            </a>
          </div>
        </nav>
      </div>

      <main class="flex-1">
        <slot />
      </main>

      <footer class="bg-gradient-to-br from-gray-50 to-blue-50/30 border-t border-gray-200 mt-32">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-12 mb-12">
            <div>
              <h3 class="text-2xl font-black text-gray-900 mb-4">Jesse Geron</h3>
              <p class="text-gray-600 leading-relaxed">K-12 Tech Leader, Developer, AI Enthusiast</p>
            </div>
            <div>
              <h3 class="text-lg font-bold text-gray-900 mb-5">Work</h3>
              <ul class="space-y-3 text-gray-600">
                <li><a href="/blog" class="hover:text-blue-600 transition font-medium">Blog</a></li>
                <li><a href="/ai-resources" class="hover:text-blue-600 transition font-medium">AI Resources</a></li>
                <li><a href="/projects" class="hover:text-blue-600 transition font-medium">Projects</a></li>
                <li><a href="/work-docs" class="hover:text-blue-600 transition font-medium">Work Docs</a></li>
              </ul>
            </div>
            <div>
              <h3 class="text-lg font-bold text-gray-900 mb-5">Play</h3>
              <ul class="space-y-3 text-gray-600">
                <li><a href="/board-games" class="hover:text-blue-600 transition font-medium">Tabletop Gaming</a></li>
                <li><a href="/biking" class="hover:text-blue-600 transition font-medium">Mountain Biking</a></li>
              </ul>
            </div>
          </div>
          <div class="text-center border-t border-gray-200 pt-10">
            <p class="text-sm text-gray-600 italic mb-5 max-w-3xl mx-auto leading-relaxed">
              The views and opinions expressed on this site are my own and do not necessarily reflect the official policy or position of any organization I work for, unless explicitly stated otherwise.
            </p>
            <p class="text-gray-500 font-medium">&copy; {new Date().getFullYear()} Jesse Geron. Built with Astro & Tailwind CSS.</p>
          </div>
        </div>
      </footer>
    </div>

    <script>
      const menuBtn = document.getElementById('mobile-menu-btn');
      const menuClose = document.getElementById('mobile-menu-close');
      const menu = document.getElementById('mobile-menu');
      const overlay = document.getElementById('mobile-menu-overlay');

      function openMenu() {
        menu?.classList.remove('translate-x-full');
        overlay?.classList.remove('hidden');
        setTimeout(() => overlay?.classList.remove('opacity-0'), 10);
        document.body.style.overflow = 'hidden';
      }

      function closeMenu() {
        menu?.classList.add('translate-x-full');
        overlay?.classList.add('opacity-0');
        setTimeout(() => overlay?.classList.add('hidden'), 300);
        document.body.style.overflow = '';
      }

      menuBtn?.addEventListener('click', openMenu);
      menuClose?.addEventListener('click', closeMenu);
      overlay?.addEventListener('click', closeMenu);
    </script>
  </body>
</html>
