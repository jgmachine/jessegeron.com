---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import { getCollection } from 'astro:content';

const allResources = await getCollection('ai-resources');
const resources = allResources.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return a.data.title.localeCompare(b.data.title);
});

// Get unique topics and tags
const allTopics = [...new Set(resources.map(r => r.data.topic))].sort();
const allTags = [...new Set(resources.flatMap(r => r.data.tags))].sort();
---

<Layout title="AI Resources - Jesse Geron" description="Curated AI resources, guides, and tools">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16">

    <header class="mb-16 text-center">
      <h1 class="text-5xl sm:text-6xl font-black text-gray-900 mb-6">
        <span class="gradient-text">AI Resources</span>
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Curated guides, tools, and resources for working with AI technologies
      </p>
    </header>

    <!-- Filter Section -->
    <div class="mb-12 p-8 bg-white rounded-2xl shadow-sm border border-gray-200">
      <h2 class="text-xl font-bold text-gray-900 mb-6">Filter by Topic</h2>
      <div class="flex flex-wrap gap-3 mb-8">
        <a href="/ai-resources" class="px-5 py-2.5 bg-blue-600 text-white rounded-full text-sm font-semibold hover:bg-blue-700 transition-colors shadow-sm">
          All Topics
        </a>
        {allTopics.map((topic) => (
          <a href={`/ai-resources?topic=${encodeURIComponent(topic)}`} class="px-5 py-2.5 bg-gray-100 text-gray-900 rounded-full text-sm font-semibold hover:bg-gray-200 transition-colors">
            {topic}
          </a>
        ))}
      </div>

      <h2 class="text-xl font-bold text-gray-900 mb-6 mt-8">Tags</h2>
      <div class="flex flex-wrap gap-2">
        {allTags.map((tag) => (
          <a href={`/ai-resources?tag=${encodeURIComponent(tag)}`} class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium hover:bg-blue-50 hover:text-blue-700 transition-all border border-gray-200 hover:border-blue-200">
            #{tag}
          </a>
        ))}
      </div>
    </div>

    <!-- Featured Resources -->
    {resources.some(r => r.data.featured) && (
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Featured Resources</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
          {resources.filter(r => r.data.featured).map((resource) => (
            <Card
              title={resource.data.title}
              description={resource.data.description}
              href={`/ai-resources/${resource.slug}`}
              tags={[resource.data.topic, ...resource.data.tags]}
            />
          ))}
        </div>
      </section>
    )}

    <!-- All Resources -->
    <section>
      <h2 class="text-3xl font-bold text-gray-900 mb-8">All Resources</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {resources.map((resource) => (
          <Card
            title={resource.data.title}
            description={resource.data.description}
            href={`/ai-resources/${resource.slug}`}
            tags={[resource.data.topic, ...resource.data.tags]}
          />
        ))}
      </div>
    </section>

    {resources.length === 0 && (
      <div class="text-center py-16">
        <p class="text-gray-600 text-lg">No resources found.</p>
      </div>
    )}

  </div>
</Layout>
