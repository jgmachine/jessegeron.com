---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import { getCollection } from 'astro:content';

const allBlogPosts = await getCollection('blog');
const posts = allBlogPosts
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

// Get unique tags, categories, and work/play categories
const allTags = [...new Set(posts.flatMap(post => post.data.tags))].sort();
const allCategories = [...new Set(posts.map(post => post.data.category))].sort();
const workPlayCategories = ['Work', 'Play'];
---

<Layout title="Blog - Jesse Geron" description="Articles about software development, AI, and technology">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16">

    <header class="mb-16 text-center">
      <h1 class="text-5xl sm:text-6xl font-black text-gray-900 mb-6">
        <span class="gradient-text">Blog</span>
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Thoughts and insights on software development, AI, and technology
      </p>
    </header>

    <!-- Filter Section -->
    <div class="mb-12 p-8 bg-white rounded-2xl shadow-sm border border-gray-200">
      <h2 class="text-xl font-bold text-gray-900 mb-6">Filter by Topic</h2>
      <div class="flex flex-wrap gap-3 mb-8">
        <a href="/blog" class="px-5 py-2.5 bg-blue-600 text-white rounded-full text-sm font-semibold hover:bg-blue-700 transition-colors shadow-sm">
          All Posts
        </a>
        {workPlayCategories.map((wpCat) => (
          <a href={`/blog?workplay=${encodeURIComponent(wpCat)}`} class="px-5 py-2.5 bg-gray-100 text-gray-900 rounded-full text-sm font-semibold hover:bg-gray-200 transition-colors">
            {wpCat}
          </a>
        ))}
      </div>

      <h3 class="text-base font-bold text-gray-900 mb-4">Categories</h3>
      <div class="flex flex-wrap gap-2 mb-8">
        {allCategories.map((category) => (
          <a href={`/blog?category=${encodeURIComponent(category)}`} class="px-4 py-2 bg-gray-100 text-gray-700 rounded-full text-sm font-medium hover:bg-blue-50 hover:text-blue-700 transition-all border border-gray-200 hover:border-blue-200">
            {category}
          </a>
        ))}
      </div>

      <h3 class="text-base font-bold text-gray-900 mb-4">Tags</h3>
      <div class="flex flex-wrap gap-2">
        {allTags.map((tag) => (
          <a href={`/blog?tag=${encodeURIComponent(tag)}`} class="px-4 py-2 bg-blue-50 text-blue-700 rounded-full text-sm border border-blue-200 hover:bg-blue-100 transition-all font-medium">
            #{tag}
          </a>
        ))}
      </div>
    </div>

    <!-- Blog Posts Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {posts.map((post) => (
        <Card
          title={post.data.title}
          description={post.data.description}
          href={`/blog/${post.slug}`}
          tags={post.data.tags}
          date={post.data.pubDate}
        />
      ))}
    </div>

    {posts.length === 0 && (
      <div class="text-center py-16">
        <p class="text-gray-600 text-lg">No blog posts found.</p>
      </div>
    )}

  </div>
</Layout>
