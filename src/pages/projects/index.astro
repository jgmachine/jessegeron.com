---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const projects = allProjects.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return a.data.order - b.data.order;
});

// Get unique tags
const allTags = [...new Set(projects.flatMap(p => p.data.tags))].sort();
---

<Layout title="Projects - Jesse Geron" description="Portfolio of projects and work">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16">

    <header class="mb-16 text-center">
      <h1 class="text-5xl sm:text-6xl font-black text-gray-900 mb-6">
        <span class="gradient-text">Projects</span>
      </h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        A collection of projects I've built and contributed to
      </p>
    </header>

    <!-- Filter Section -->
    <div class="mb-12 p-8 bg-white rounded-2xl shadow-sm border border-gray-200">
      <h2 class="text-xl font-bold text-gray-900 mb-6">Filter by Technology</h2>
      <div class="flex flex-wrap gap-3">
        <a href="/projects" class="px-5 py-2.5 bg-blue-600 text-white rounded-full text-sm font-semibold hover:bg-blue-700 transition-colors shadow-sm">
          All
        </a>
        {allTags.map((tag) => (
          <a href={`/projects?tag=${encodeURIComponent(tag)}`} class="px-5 py-2.5 bg-gray-100 text-gray-900 rounded-full text-sm font-semibold hover:bg-gray-200 transition-colors">
            {tag}
          </a>
        ))}
      </div>
    </div>

    <!-- Featured Projects -->
    {projects.some(p => p.data.featured) && (
      <section class="mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-8">Featured Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
          {projects.filter(p => p.data.featured).map((project) => (
            <Card
              title={project.data.title}
              description={project.data.description}
              href={`/projects/${project.slug}`}
              tags={project.data.tags}
            />
          ))}
        </div>
      </section>
    )}

    <!-- All Projects -->
    <section>
      <h2 class="text-3xl font-bold text-gray-900 mb-8">All Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <Card
            title={project.data.title}
            description={project.data.description}
            href={`/projects/${project.slug}`}
            tags={project.data.tags}
          />
        ))}
      </div>
    </section>

    {projects.length === 0 && (
      <div class="text-center py-16">
        <p class="text-gray-600 text-lg">No projects found.</p>
      </div>
    )}

  </div>
</Layout>
