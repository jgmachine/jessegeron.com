---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/Card.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const projects = allProjects.sort((a, b) => {
  if (a.data.featured && !b.data.featured) return -1;
  if (!a.data.featured && b.data.featured) return 1;
  return a.data.order - b.data.order;
});

// Get unique tags
const allTags = [...new Set(projects.flatMap(p => p.data.tags))].sort();
---

<Layout title="Projects - Jesse Geron" description="Portfolio of projects and work">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">

    <header class="mb-12">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-4">Projects</h1>
      <p class="text-xl text-gray-600 dark:text-gray-300">
        A collection of projects I've built and contributed to
      </p>
    </header>

    <!-- Filter Section -->
    <div class="mb-8 p-6 bg-white dark:bg-gray-800 rounded-lg shadow-sm border border-gray-200 dark:border-gray-700">
      <h2 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Filter by Technology</h2>
      <div class="flex flex-wrap gap-2">
        <a href="/projects" class="px-3 py-1 bg-blue-600 text-white rounded-full text-sm hover:bg-blue-700 transition">
          All
        </a>
        {allTags.map((tag) => (
          <a href={`/projects?tag=${encodeURIComponent(tag)}`} class="px-3 py-1 bg-gray-200 dark:bg-gray-700 text-gray-900 dark:text-white rounded-full text-sm hover:bg-gray-300 dark:hover:bg-gray-600 transition">
            {tag}
          </a>
        ))}
      </div>
    </div>

    <!-- Featured Projects -->
    {projects.some(p => p.data.featured) && (
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Featured Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
          {projects.filter(p => p.data.featured).map((project) => (
            <Card
              title={project.data.title}
              description={project.data.description}
              href={`/projects/${project.slug}`}
              tags={project.data.tags}
            />
          ))}
        </div>
      </section>
    )}

    <!-- All Projects -->
    <section>
      <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">All Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.map((project) => (
          <Card
            title={project.data.title}
            description={project.data.description}
            href={`/projects/${project.slug}`}
            tags={project.data.tags}
          />
        ))}
      </div>
    </section>

    {projects.length === 0 && (
      <div class="text-center py-12">
        <p class="text-gray-600 dark:text-gray-400 text-lg">No projects found.</p>
      </div>
    )}

  </div>
</Layout>
